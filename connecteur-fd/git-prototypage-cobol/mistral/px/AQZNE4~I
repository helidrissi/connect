        do
          echo "Mise à jour du Fichier "  $source
          cp $source $source.old
          sed "s/$1\.$2\.$3\.$4/$5\.$6\.$7\.$8/"  $source > $source.new
          mv $source.new $source
          chmod 777 $source
#          rm $source.old
        done


